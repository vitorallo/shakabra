# Shakabra - AI DJ Party Player (Web App)
# Environment Configuration Template
# 
# IMPORTANT: Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local files with real API keys to git!

# =============================================================================
# Spotify Web API Configuration (Simplified for Web App)
# =============================================================================
# Get these values from: https://developer.spotify.com/dashboard
# 1. Create a new app in your Spotify Dashboard
# 2. Add redirect URI: https://yourdomain.com/api/auth/callback/spotify
#    For local dev: http://localhost:3000/api/auth/callback/spotify
# 3. Copy Client ID and Client Secret here

SPOTIFY_CLIENT_ID=your_spotify_app_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_app_client_secret_here

# For Next.js - these will be exposed to the browser (prefix with NEXT_PUBLIC_)
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=your_spotify_app_client_id_here

# =============================================================================
# NextAuth.js Configuration
# =============================================================================
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here_32_characters_minimum

# Your app's URL (change for production)
NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_URL=https://yourdomain.com

# =============================================================================
# Database Configuration (for SaaS features)
# =============================================================================
# Recommended: Supabase (free tier available)
DATABASE_URL=your_database_connection_string_here

# Alternative: PlanetScale, Railway, or other providers
# DATABASE_URL=mysql://username:password@host:port/database

# =============================================================================
# Stripe Configuration (for SaaS subscriptions)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Shakabra
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# AI DJ Engine Configuration (Same as before but web-optimized)
# =============================================================================
# Mixing algorithm weights (0.0 - 1.0)
AI_TEMPO_WEIGHT=0.30
AI_ENERGY_WEIGHT=0.25  
AI_KEY_HARMONY_WEIGHT=0.20
AI_GENRE_WEIGHT=0.15
AI_MOOD_WEIGHT=0.10

# Track compatibility thresholds
TEMPO_TOLERANCE_PERCENT=5
ENERGY_TOLERANCE=0.2
MIN_COMPATIBILITY_SCORE=0.7

# =============================================================================
# Feature Flags & SaaS Configuration
# =============================================================================
# Free tier limitations
FREE_TIER_MAX_PLAYLISTS=3
FREE_TIER_MAX_TRACKS_PER_SESSION=50
FREE_TIER_CROSSFADE_DURATION=3

# Pro tier features
PRO_TIER_PRICE_USD=9.99
PRO_TIER_FEATURES=unlimited_playlists,advanced_crossfade,ai_recommendations,download_mixes

# =============================================================================
# Development & Debug Configuration
# =============================================================================
# Set to true to enable verbose logging
DEBUG_SPOTIFY_API=false
DEBUG_AI_ENGINE=false
DEBUG_AUDIO_FEATURES=false
DEBUG_NEXTAUTH=false

# Mock data for development (when no Spotify Premium)
USE_MOCK_SPOTIFY_DATA=false

# =============================================================================
# Analytics & Monitoring (Optional)
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# PostHog (product analytics)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry (error tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# =============================================================================
# Email Configuration (for SaaS notifications)
# =============================================================================
# Resend (recommended for Next.js)
RESEND_API_KEY=re_your_resend_api_key_here

# SendGrid (alternative)
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# =============================================================================
# Redis Configuration (for session storage and caching)
# =============================================================================
# Upstash Redis (free tier available)
REDIS_URL=redis://default:password@host:port

# =============================================================================
# Party Mode Configuration  
# =============================================================================
# Default party progression settings (same as before)
DEFAULT_PARTY_DURATION_MINUTES=240
ENERGY_PROGRESSION_CURVE=gradual
AUTO_CROSSFADE_DURATION=8

# Track history settings
PREVENT_REPEAT_HOURS=2
MAX_QUEUE_SIZE=50

# Web app specific settings
MAX_CONCURRENT_SESSIONS=3
SESSION_TIMEOUT_MINUTES=60